<div class="carousel-section" style="background-color: {{ section.settings.bg }}; padding-bottom: 70px;">
  <div class="page-width">
    <div class="main-wrapper">
      <div>
        <p class="text-title text-center" style="margin-bottom: {{ section.settings.title_mb }}px;">
          {{ section.settings.title }}
        </p>
      </div>
      <div class="embla-product-container">
        <div class="embla_product-image">
          {{ section.settings.product.images[0].src | image_url: width: 400 | image_tag }}
        </div>
        <div class="btn">
          <a href="{{ section.settings.product.url }}">Shop</a>
        </div>
      </div>
      <div class="carousel-wrapper">
        <div class="carousel">
          {%- for block in section.blocks -%}
          <div class="carousel__cell" style="width: {{ section.settings.cell_width }}; margin-right: {{ section.settings.mr }}px;">
            {%- if block.settings.text != blank -%}
            <div class="rte">{{ block.settings.text }}</div>
            {%- endif -%}
            {%- if block.settings.title != blank -%}
            <h3>{{ block.settings.title | escape }}</h3>
            {%- endif -%}
          </div>
          {%- endfor -%}
        </div>
        <button class="carousel-btn prev">&lt;</button>
        <button class="carousel-btn next">&gt;</button>
      </div>
    </div>
  </div>
</div>

<style>
  .carousel-wrapper {
    position: relative;
    overflow: hidden;
    margin: 0 auto;
  }

  .carousel {
    display: flex;
    gap: 16px; /* Adjust based on spacing needs */
    transition: transform 0.3s ease;
  }

  .carousel__cell {
    flex: 0 0 auto;
    height: 400px;
    padding: 5px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: 1px solid #000;
    border-radius: 33px;
  }

  .carousel-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: #000;
    color: #fff;
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    cursor: pointer;
  }

  .carousel-btn.prev {
    left: 10px;
  }

  .carousel-btn.next {
    right: 10px;
  }

  .embla-product-container {
    position: absolute;
    background: #000;
    height: 400px;
    z-index: 99;
    border: 1px solid #000;
    overflow: hidden;
    border-radius: 30px;
    left: auto;
    width: 30.9%;
  }

  .embla_product-image img {
    margin: 0 auto;
    display: table;
    width: 100%;
  }

  .embla-product-container .btn {
    z-index: 9999;
    position: absolute;
    bottom: 20px;
    margin: 0 auto;
    display: table;
    left: 0;
    right: 0;
  }

  .embla-product-container .btn a {
    text-decoration: none;
    background: #000;
    padding: 6px 30px;
    border-radius: 30px;
    color: #fff;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const carousel = document.querySelector(".carousel");
    const prevButton = document.querySelector(".carousel-btn.prev");
    const nextButton = document.querySelector(".carousel-btn.next");

    let scrollPosition = 0; // Keeps track of the current scroll position
    const scrollAmount = 400; // Adjust based on the cell width + margin

    const scrollCarousel = (direction) => {
      const maxScroll = carousel.scrollWidth - carousel.clientWidth;
      if (direction === "next") {
        scrollPosition = Math.min(scrollPosition + scrollAmount, maxScroll);
      } else {
        scrollPosition = Math.max(scrollPosition - scrollAmount, 0);
      }
      carousel.style.transform = `translateX(-${scrollPosition}px)`;
    };

    // Add event listeners to the buttons
    prevButton.addEventListener("click", () => scrollCarousel("prev"));
    nextButton.addEventListener("click", () => scrollCarousel("next"));
  });
</script>

{% schema %}
{
  "name": "Custom Carousel Slider",
  "settings": [
    {
      "type": "color",
      "id": "bg",
      "label": "Background Color"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Select Product"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Featured Collection Slider"
    },
    {
      "type": "range",
      "id": "title_mb",
      "min": 30,
      "max": 120,
      "step": 1,
      "unit": "px",
      "label": "Title Margin Bottom",
      "default": 48
    },
    {
      "type": "select",
      "id": "cell_width",
      "label": "Choose number of slides to show on start",
      "options": [
        { "value": "33.33%", "label": "Three" },
        { "value": "25%", "label": "Four" },
        { "value": "20%", "label": "Five" },
        { "value": "16.6666667%", "label": "Six" },
        { "value": "12.5%", "label": "Eight" }
      ],
      "default": "25%"
    },
    {
      "type": "range",
      "id": "mr",
      "min": 0,
      "max": 48,
      "step": 1,
      "unit": "px",
      "label": "Cell Margin Right",
      "default": 16,
      "info": "Save page to see changes."
    }
  ],
  "blocks": [
    {
      "type": "carousel",
      "name": "Carousel Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "Full Name",
          "label": "Customer"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "Feedback"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Carousel Slider"
    }
  ]
}
{% endschema %}