<div class="about">
   {% if settings.portfolio_link %}
   <a class="bg_links social portfolio" href="{{ settings.portfolio_link }}" target="_blank">
      <span class="icon"></span>
   </a>
   {% endif %}

   {% if settings.dribbble_link %}
   <a class="bg_links social dribbble" href="{{ settings.dribbble_link }}" target="_blank">
      <span class="icon"></span>
   </a>
   {% endif %}

   {% if settings.linkedin_link %}
   <a class="bg_links social linkedin" href="{{ settings.linkedin_link }}" target="_blank">
      <span class="icon"></span>
   </a>
   {% endif %}

   <a class="bg_links logo"></a>
</div>

<section id="wrapper">
   <div class="content">
      <!-- Tab Links -->
      <div class="tabs">
         <button class="tablinks active" data-country="tab_1">
            <p>{{ settings.tab_1_title | default: 'Tab 1' }}</p>
         </button>
         <button class="tablinks" data-country="tab_2">
            <p>{{ settings.tab_2_title | default: 'Tab 2' }}</p>
         </button>
         <button class="tablinks" data-country="tab_3">
            <p>{{ settings.tab_3_title | default: 'Tab 3' }}</p>
         </button>
      </div>

      <!-- Tab Content -->
      <div class="wrapper_tabcontent">
         <div id="tab_1" class="tabcontent active">
            <h3>{{ settings.tab_1_title | default: 'Tab 1' }}</h3>
            <p>{{ settings.tab_1_content | default: 'Content goes here' }}</p>
         </div>
         <div id="tab_2" class="tabcontent">
            <h3>{{ settings.tab_2_title | default: 'Tab 2' }}</h3>
            <p>{{ settings.tab_2_content | default: 'Content goes here' }}</p>
         </div>
         <div id="tab_3" class="tabcontent">
            <h3>{{ settings.tab_3_title | default: 'Tab 3' }}</h3>
            <p>{{ settings.tab_3_content | default: 'Content goes here' }}</p>
         </div>
      </div>
   </div>
</section>
