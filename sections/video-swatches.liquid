<section class="premium-section" id="premium-collection">
  <div class="left-block">
    <div class="image">
      <!-- Dynamic image from Shopify store with height and width attributes -->
      <img src="{{ section.settings.image | img_url: 'original' }}" alt="Premium Image" width="600" height="400" />
    </div>
  </div>
  <div class="right-block">
    <div class="premium-intro">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12 col-xs-12">
            <p class="section-title">{{ section.settings.section_title }}</p>
            <h2 class="section-heading">{{ section.settings.section_subtitle }}</h2>
          </div>
        </div>
      </div>
    </div>
    <div class="premium-highlights">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-4 col-xs-6">
            <div class="video-swatch">
              <video src="{{ section.settings.video_1_url }}" class="video" autoplay loop muted></video>
            </div>
            <p class="highlight-text">{{ section.settings.video_1_title }}</p>
          </div>
          <div class="col-md-4 col-xs-6">
            <div class="video-swatch">
              <video src="{{ section.settings.video_2_url }}" class="video" autoplay loop muted></video>
            </div>
            <p class="highlight-text">{{ section.settings.video_2_title }}</p>
          </div>
          <div class="col-md-4 col-xs-6">
            <div class="video-swatch">
              <video src="{{ section.settings.video_3_url }}" class="video" autoplay loop muted></video>
            </div>
            <p class="highlight-text">{{ section.settings.video_3_title }}</p>
          </div>
          <div class="col-md-4 col-xs-6">
            <div class="video-swatch">
              <video src="{{ section.settings.video_4_url }}" class="video" autoplay loop muted></video>
            </div>
            <p class="highlight-text">{{ section.settings.video_4_title }}</p>
          </div>
          <div class="col-md-4 col-xs-6">
            <div class="video-swatch">
              <video src="{{ section.settings.video_5_url }}" class="video" autoplay loop muted></video>
            </div>
            <p class="highlight-text">{{ section.settings.video_5_title }}</p>
          </div>
          <div class="col-md-4 col-xs-6">
            <div class="video-swatch">
              <video src="{{ section.settings.video_6_url }}" class="video" autoplay loop muted></video>
            </div>
            <p class="highlight-text">{{ section.settings.video_6_title }}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
    .premium-section {
    display: flex;
    flex-direction: column-reverse;
    background: #f7f7f7;
    padding: 0;
}

.premium-section .section-title {
    color: var(--primary-alt-color);
}

.premium-section .left-block {
    width: 100vw;
}

.premium-section .left-block .image {
    width: 100%;
    height: 0;
    padding-bottom: 140%;
    background: url({{ section.settings.image | img_url: 'original' }}) top;
    background-size: cover;
}

.premium-section .left-block .image img {
    width: 100%;
}

.premium-section .right-block {
    width: 100vw;
    padding: var(--base-block-unit) 0;
}

.premium-section .premium-intro .section-title {
    font-size: 24px;
    font-weight: bold;
}

.premium-section .premium-intro .section-heading {
    font-family: 'Georgia', serif;
    font-size: 20px;
    color: #333;
}

.premium-section .premium-highlights .video-swatch {
    width: calc(var(--base-block-unit) / 2);
    height: calc(var(--base-block-unit) / 2);
    margin-bottom: 1em;
    margin-top: calc(var(--base-block-unit) / 1.5);
    border-radius: 50%;
    overflow: hidden;
    box-shadow: 0 .5em .5em rgba(0, 0, 0, .1);
}

.premium-section .premium-highlights .video {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.premium-section .premium-highlights .highlight-text {
    text-align: center;
    font-size: 16px;
    color: #333;
    margin-top: 10px;
}

@media (min-width: 992px) {
    .col-md-12 {
        position: relative;
        min-height: 1px;
        padding-right: 15px;
        padding-left: 15px;
    }
}

.container-fluid {
    padding-right: 15px;
    padding-left: 15px;
    margin-right: auto;
    margin-left: auto;
}

.row {
    margin-right: -15px;
    margin-left: -15px;
}
</style>

